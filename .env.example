# ============================================
# MC Server Boss - Environment Configuration
# ============================================

# Flask Configuration
SECRET_KEY=change_this_to_a_random_secure_string
MOCK_MODE=False  # Set to True for testing without a real server

# ============================================
# RCON Configuration (Required)
# ============================================
RCON_PASSWORD=your_rcon_password_here
RCON_HOST=192.168.1.100  # IP of your Minecraft server
RCON_PORT=25575          # Default RCON port

# ============================================
# SSH Tunnel Configuration (Optional)
# ============================================
# Use SSH tunnel if your server is remote or behind NAT
# If configured, RCON will connect through SSH tunnel
# Leave blank to use direct RCON connection

SSH_HOST=              # Server IP for SSH connection
SSH_PORT=22            # SSH port (default 22)
SSH_USER=              # SSH username (e.g., root, ubuntu)
SSH_PASSWORD=          # SSH password

# RCON settings when using SSH tunnel
REMOTE_RCON_HOST=127.0.0.1  # RCON host from server's perspective (usually localhost)

# ============================================
# Server Paths (Required for SSH features)
# ============================================
# These paths are used for log tailing and file operations via SSH
MC_LOG_PATH=/path/to/minecraft/logs/latest.log
MC_SERVER_PATH=/path/to/minecraft/data

# ============================================
# Docker Integration (Optional)
# ============================================
# Container name for server power controls (start/stop/restart)
MC_CONTAINER_NAME=minecraft_server

# ============================================
# BlueMap Integration (Optional)
# ============================================
# URL to your BlueMap web interface
BLUEMAP_URL=http://your.server.ip:8100

# ============================================
# Database Configuration
# ============================================
# Data directory for persistent storage (SQLite database)
# Default: ./data (mounted as Docker volume)
DATA_DIR=/app/data
